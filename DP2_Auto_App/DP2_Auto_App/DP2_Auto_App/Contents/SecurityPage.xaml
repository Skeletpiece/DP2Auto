<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DP2_Auto_App.Contents.SecurityPage"
             Title="Seguridad">
    <ContentPage.Content>
        <StackLayout>
            <!--<Image Source="Lock.jpg"  WidthRequest="80" HeightRequest="80"/>-->
            <Button Text="Contraseña" Image="passwordIcon.png" HorizontalOptions="Center" Margin="0, 0, 0, 15"
                    Clicked="buttonClickedChangePsw"/>
            <Button Text="Huella Digital" Image="sensorFingerprint.png" HorizontalOptions="Center" Margin="0, 0, 0, 15"
                    Clicked="buttonClickedFingerprint"/>
            <Button Text="Patron" Image="patternIcon.png" HorizontalOptions="Center" Margin="0, 0, 0, 15"
                    Clicked="buttonClickedPattern"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>