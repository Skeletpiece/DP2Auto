<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DP2_Auto_App.Contents.RemindersNew">
    <ContentPage.Content>
        <StackLayout Margin="10,0,0,0">
            <StackLayout Orientation="Horizontal">
                <Label Font="Bold" FontSize="Large" Text="Nombre: "/>
                <Entry FontAttributes="Bold" FontSize="Large" x:Name="entry_Desc" Placeholder="Nombre" Text="Prueba"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Large" Text="Fecha: "/>
                <Entry FontSize="Large" x:Name="entry_Date" Text="12/12/2017"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Large" Text="Hora: "/>
                <Entry FontSize="Large" x:Name="entry_Time" Text="02:00 pm"/>
            </StackLayout>
            <Button Text="Crear" Clicked="Button_ClickedCreate"/>
            <Button Text="Regresar" Clicked="Button_ClickedReturn"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>