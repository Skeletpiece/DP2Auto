<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DP2_Auto_App.Contents.ReminderRegister"
             Title="Recordatorios">
    <ContentPage.Content>
        <StackLayout Margin="10,0,0,0">
            <StackLayout Orientation="Horizontal">
                <Label Font="Bold" FontSize="Large" Text="Nombre: "/>
                <Entry FontAttributes="Bold" FontSize="Large" x:Name="entry_Desc" Placeholder="Nombre" Text="Prueba"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Large" Text="Fecha: "/>
                <DatePicker x:Name="fecha">
                    <DatePicker.Format>dd/MM/yyyy</DatePicker.Format>
                </DatePicker>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Large" Text="Hora: "/>
                <TimePicker x:Name="hora">
                    <TimePicker.Format>HH:mm</TimePicker.Format>
                </TimePicker>
            </StackLayout>
            <Button Text="Crear" Clicked="Button_ClickedCreate"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>