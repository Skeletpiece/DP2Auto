<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DP2_Auto_App.Contents.Bluetooth"
             Title="BlueTooth">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout>
                <Button x:Name="btnConnect" Text="Status" Clicked="btnConnect_Clicked"/>
                <Button x:Name="btnListDevices" Text="Scan" Clicked="btnListDevices_Clicked"/>
                <Button x:Name="btnDisconnect" Text="Scan" Clicked="btnDisconnect_Clicked"/>
            </StackLayout>
            
            <ListView x:Name="lv">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding PairedDevices}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>