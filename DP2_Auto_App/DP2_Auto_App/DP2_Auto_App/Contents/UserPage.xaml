<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DP2_Auto_App.Contents.UserPage"
             Title="Usuario">
    <ContentPage.Content>
        <StackLayout Margin="10,0,0,0">
            <StackLayout Orientation="Horizontal">
                <Label Font="Bold" FontSize="Large" Text="Nombre: "/>
                <Entry FontAttributes="Bold" FontSize="Large" x:Name="entry_Name" Placeholder="Nombre"/>
                <Entry FontAttributes="Bold" FontSize="Large" x:Name="entry_LastName" Placeholder="Apellido"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Large" Text="Email: "/>
                <Entry FontSize="Medium" x:Name="entry_Email"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Large" Text="Teléfono: "/>
                <Entry FontSize="Medium" x:Name="entry_Phone"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Large" Text="Rating: "/>
                <Entry FontSize="Medium" x:Name="entry_Rating"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Large" Text="Creado: "/>
                <Entry FontSize="Small" x:Name="entry_Created"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label FontSize="Large" Text="Actualizado: "/>
                <Entry FontSize="Small" x:Name="entry_Updated"/>
            </StackLayout>
            <Button Text="Actualizar" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>